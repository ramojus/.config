set $gnome-schema org.gnome.desktop.interface
exec_always {
    # gsettings set org.gtk.Settings.FileChooser window-size '(400,640)'
    gsettings set $gnome-schema gtk-theme 'adw-gtk3'
    # gsettings set $gnome-schema gtk-theme 'Lounge-night-compact'
    # gsettings set $gnome-schema gtk-theme 'Mint-Y-Dark-Purple'
    # gsettings set $gnome-schema icon-theme 'Paper-Mono-Dark'
    gsettings set $gnome-schema icon-theme 'Adwaita'
    gsettings set $gnome-schema cursor-theme '$cursor'
    gsettings set $gnome-schema cursor-size $cursor_size
    gsettings set $gnome-schema font-name 'Source Sans Pro, 11'
    gsettings set $gnome-schema text-scaling-factor 1.1
}

